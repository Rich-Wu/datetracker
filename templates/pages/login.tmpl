{{ template "headHTML" }}

<body>
    <h1 class="text-center">Login</h1>
    <form autocomplete="on" class="mx-auto max-w-md" action="/login" method="POST">
        <label for="username" class="block">Username:</label>
        <input class="vertical" type="text" id="username" name="username" autocomplete="on">
        <label for="password" class="block">Password:</label>
        <input class="vertical" type="password" id="password" name="password" autocomplete="current-password">
        <input class="vertical" type="submit" value="Login">
    </form>

